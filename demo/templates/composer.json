{
    "name": "drupal/isp",
    "description": "The project for isp package.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "ext-pdo_sqlite" : "*",
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.5",
        "php": ">=7.0.8",
        "drupal/core": "~8.7",
        "oomphinc/composer-installers-extender": "^1.1",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "drush/drush": "^9.5",
        "drupal/console": "^1.8",
        "drupal/commerce_recurring": "^1.0@beta",
        "kgaut/potx": "dev-8.x-1.x",
        "drupal/varbase": "^6.3"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "~8.7"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "setup": [
            "cd docroot && php core/scripts/drupal install demo_umami --no-interaction",
            "cd docroot && ../vendor/bin/drush en -y jsonapi"
        ],
        "start": [
            "cd docroot && php core/scripts/drupal server"
        ],
        "devify": [
            "ln -s ../../../isp docroot/modules/contrib/isp"
        ],
        "test": [
            "phpunit -c docroot/core --log-junit reports/phpunit.xml docroot/modules/contrib/isp"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["library"],
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset"
            ],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "enable-patching": true,
        "patches": {
            "drupal/core": {
                "Remove Umami dependency to Workflows because the admin UI doesn't currently support it": "patches/remove-umami-workflows-dependency.patch"
            }
        }
    }
}
